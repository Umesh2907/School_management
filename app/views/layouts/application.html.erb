<!DOCTYPE html>
<html>
  <head>
    <title>SchoolManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
      <h3>School</h3>
      <% if user_signed_in? %>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto mb-3">       
            <li class="nav-item mt-2 ml-3">
              Logged in as <strong><%= current_user.email %></strong>.
              <%= image_tag(current_user.avatar_thumbnail, class: "rounded-circle", width: "40px", height: "40px") %>
              <%= link_to 'Edit profile', edit_user_registration_path, class:"navbar-item btn btn-outline-secondary mr-3" %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"navbar-item btn btn-outline-danger mr-3" %>
            </li>
          </ul>
          <%# <form class="form-inline my-2 my-lg-0"> %>
            <%# <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search"> %>
            <%# <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button> %>
          <%# </form> %>
        <% else %> 
          <ul class="navbar-nav mr-auto mb-3">       
            <li class="nav-item mt-2 ml-3">
              <%= link_to "Sign up", new_user_registration_path, class:"navbar-item btn btn-outline-success mr-3" %>
              <%= link_to "Login", new_user_session_path, class:"navbar-item btn btn-outline-warning mr-3" %>
            </li>
          </ul>
        <% end %>
      </div>
    </nav>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
