<div class="col-lg-3 col-md-6 mt-5 ml-auto mr-auto">
  <%= form_with model: @school, local: true do |form| %>
  
  <% if @school.errors.any? %>
      <div id="error_explanation">
      <h2>
          <%= pluralize(@school.errors.count, "error") %> prohibited
          this school from being saved:
      </h2>
      <ul>
          <% @school.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
      </ul>
      </div>
  <% end %>
  
  <div class="form-group">
      <%= form.label :School_name %><br>
      <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= form.label :Email %><br>
      <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= form.label :Address %><br>
      <%= form.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= form.label :Contact %><br>
      <%= form.text_field :contacts, class: 'form-control' %>
  </div>
  
  <div class="form-group">
      <%= form.submit "Udate School", class: 'btn btn-primary' %>
  </div>

  <div class="form-group btn btn-warning">
    <%= link_to t('.back'), :back %>
  </div>
  
  <% end %>
</div>
