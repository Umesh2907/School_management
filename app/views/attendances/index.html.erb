<div class="col-lg-3 col-md-6 mt-5 ml-auto mr-auto">
  <h1>Attendances</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Day</th>
        <th>Attendace</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |attendance| %>
        <tr>
          <td><%= attendance.date %></td>
          <td><%= attendance.day %></td>
          <td><%= attendance.attendance %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="form-group btn btn-warning">
    <%= link_to t('.back'), :back %>
  </div>
</div>