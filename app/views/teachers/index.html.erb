 <div class="mt-5">
  <h1>Teachers</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Of Birth</th>
        <th>Gender</th>
        <th>Contact Number</th>
        <th>Address</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% @teachers.each do |user| %>
        <tr>
          <td><%= user.email  %></td>
          <td><%= user.first_name  %></td>
          <td><%= user.last_name %></td>
          <td><%= user.date_of_birth %></td>
          <td><%= user.gender %></td>
          <td><%= user.contact_number %></td>
          <td><%= user.address %></td>
          <td><%= user.role %></td>          
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="form-group btn btn-warning">
    <%= link_to t('.back'), root_path %>
  </div>
</div>
