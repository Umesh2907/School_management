<div class="col-lg-3 col-md-6 mt-5 ml-auto mr-auto">
  <%= form_for @standard, url: [@school, @standard], local: true do |form| %>
    <% if @standard.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@standard.errors.count, "error") %> prohibited
          this teacher from being saved:
        </h2>
        <ul>
          <% @standard.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= form.hidden_field :school_id %>
    </div>

    <div class="form-group">
      <h3><%= form.label :Add_Standard %></h3><br>
      <%= form.text_field :standard, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit "Create Class Room", class: "btn btn-primary" %>
    </div>

    <div class="form-group btn btn-warning">
      <%= link_to t('.back'), :back %>
    </div>
  <% end %>
</div>