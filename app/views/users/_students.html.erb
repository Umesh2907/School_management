<div class="mt-5">
  <h1>Students</h1>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Of Birth</th>
        <th>Gender</th>
        <th>Contact Number</th>
        <th>Address</th>
        <th>Role</th>
        <th>Standard</th>
        <th>Roll No.</th>
        <th>Edit Details</th>
        <th>Remove Student</th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= user.id  %></td>
          <td><%= user.email  %></td>
          <td><%= user.first_name  %></td>
          <td><%= user.last_name %></td>
          <td><%= user.date_of_birth %></td>
          <td><%= user.gender %></td>
          <td><%= user.contact_number %></td>
          <td><%= user.address %></td>
          <td><%= user.role %></td>          
          <td><%= user.custom_attr.map{|key| key['student_standard']}.join(' ') %></td>
          <td><%= user.custom_attr.map{|key| key['roll_no']}.join(' ') %></td>
          <td><%= link_to 'Edit Student', edit_school_user_path(@school, user) %>
          <td><%= link_to 'Remove', school_user_path(@school, user),
              method: :delete,
              data: { confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="form-group btn btn-warning">
    <%= link_to 'Back', root_path %>
  </div>
</div>
