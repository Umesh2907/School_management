<div class="col-lg-3 col-md-6 mt-5 ml-auto mr-auto">
  <%= form_for @lecture, url: [@class_room, @lecture], local: true do |form| %>
    <% if @lecture.errors.any? %>
      <div id="error_explanation">
      <h2>
          <%= pluralize(@lecture.errors.count, "error") %> prohibited
          this teacher from being saved:
      </h2>
      <ul>
        <% @lecture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= form.hidden_field :class_room_id %>
    </div>

    <div class="form-group">
      <h3><%= form.label :Title %></h3>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <h3><%= form.label :Description %></h3>
      <%= form.text_field :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <h3><%= form.label :Time %></h3>
      <%= form.text_field :time, class: 'form-control' %>
    </div>

    <div class="form-group">
      <h3><%= form.label :Subject_Code %></h3>
      <%= form.text_field :subject_code, class: 'form-control' %>
    </div>

    <div class="form-group">
      <h3><%= form.label :Duration %></h3>
      <%= form.text_field :duration, class: 'form-control' %>
    </div>

    <div class="form-group">
      <h3><%= form.label :Date %></h3>
      <%= form.text_field :date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit "Create Lecture", class: "btn btn-primary" %>
    </div>

    <div class="form-group btn btn-warning">
      <%= link_to t('.back'), :back %>
    </div>
  <% end %>
</div>