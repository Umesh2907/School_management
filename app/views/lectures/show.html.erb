<div class="mt-2 ml-3" >
  <%= link_to 'Edit Lecture', edit_class_room_lecture_path(@school, @class_room), class:"btn btn-primary" %> |
  <%= link_to t('.back'), :back, class:"btn btn-primary" %> |
  <%= link_to 'Destroy', school_class_room_lecture_path(@school, @class_room),
                method: :delete,
                data: { confirm: 'Are you sure?'}, class:"btn btn-primary" %>
</div>
<div class="container mt-5">

  <h1><%= @lecture.title %></h1>

  <p>
    <strong>Description:</strong>
    <%= @lecture.description %>
  </p>

  <p>
    <strong>Time:</strong>
    <%= @lecture.time %>
  </p>

  <p>
    <strong>Duration:</strong>
    <%= @lecture.duration %>
  </p>

  <p>
    <strong>Subject Code:</strong>
    <%= @lecture.subject_code %>
  </p>
  <p>
    <strong>Date:</strong>
    <%= @lecture.date %>
  </p>
</div>